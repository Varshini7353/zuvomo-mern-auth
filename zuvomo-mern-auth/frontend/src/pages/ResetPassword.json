import React from 'react';
import { Formik, Field, Form } from 'formik';
import * as Yup from 'yup';
import { api } from '../api';
import { useLocation, useNavigate } from 'react-router-dom';

const ResetSchema = Yup.object().shape({
  email: Yup.string().email().required(),
  otp: Yup.string().required(),
  newPassword: Yup.string().min(6).required()
});

export default function ResetPassword(){
  const loc = useLocation();
  const navigate = useNavigate();
  const initialEmail = loc.state?.email || '';

  return (
    <div>
      <h3>Reset Password</h3>
      <Formik
        initialValues={{ email: initialEmail, otp: '', newPassword: '' }}
        validationSchema={ResetSchema}
        onSubmit={async (values, { setSubmitting, setStatus }) => {
          try {
            await api.post('/auth/reset', values);
            setStatus({ success: 'Password reset. Please login.' });
            navigate('/login');
          } catch (err) {
            setStatus({ error: err.response?.data?.msg || 'Error' });
          } finally { setSubmitting(false); }
        }}
      >
        {({ isSubmitting, status }) => (
          <Form>
            <div><label>Email</label><Field name="email" /></div>
            <div><label>OTP</label><Field name="otp" /></div>
            <div><label>New password</label><Field name="newPassword" /></div>
            <button type="submit" disabled={isSubmitting}>Reset</button>
            {status?.error && <div style={{ color: 'red' }}>{status.error}</div>}
            {status?.success && <div style={{ color: 'green' }}>{status.success}</div>}
          </Form>
        )}
      </Formik>
    </div>
  );
}
import React from 'react';
import { Formik, Field, Form } from 'formik';
import * as Yup from 'yup';
import { api } from '../api';
import { useNavigate } from 'react-router-dom';

const ForgotSchema = Yup.object().shape({
  email: Yup.string().email('Invalid').required('Required')
});

export default function ForgotPassword() {
  const navigate = useNavigate();
  return (
    <div>
      <h3>Forgot Password</h3>
      <Formik
        initialValues={{ email: '' }}
        validationSchema={ForgotSchema}
        onSubmit={async (values, { setSubmitting, setStatus }) => {
          try {
            await api.post('/auth/forgot', values);
            setStatus({ success: 'OTP sent. Check email.'});
            // optionally navigate to reset screen
            navigate('/reset', { state: { email: values.email } });
          } catch (err) {
            setStatus({ error: err.response?.data?.msg || 'Error' });
          } finally { setSubmitting(false); }
        }}
      >
        {({ isSubmitting, status }) => (
          <Form>
            <div><label>Email</label><Field name="email" /></div>
            <button type="submit" disabled={isSubmitting}>Send OTP</button>
            {status?.error && <div style={{ color: 'red' }}>{status.error}</div>}
            {status?.success && <div style={{ color: 'green' }}>{status.success}</div>}
          </Form>
        )}
      </Formik>
    </div>
  );
}
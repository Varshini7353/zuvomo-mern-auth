import React from 'react';
import { Formik, Field, Form } from 'formik';
import * as Yup from 'yup';
import { api } from '../api';

const Schema = Yup.object().shape({
  currentPassword: Yup.string().required(),
  newPassword: Yup.string().min(6).required()
});

export default function ChangePassword() {
  return (
    <div>
      <h3>Change Password</h3>
      <Formik
        initialValues={{ currentPassword: '', newPassword: '' }}
        validationSchema={Schema}
        onSubmit={async (values, { setSubmitting, setStatus }) => {
          try {
            await api.post('/auth/change-password', values);
            setStatus({ success: 'Password changed' });
          } catch (err) {
            setStatus({ error: err.response?.data?.msg || 'Error' });
          } finally { setSubmitting(false); }
        }}
      >
        {({ isSubmitting, status }) => (
          <Form>
            <div><label>Current Password</label><Field name="currentPassword" type="password" /></div>
            <div><label>New Password</label><Field name="newPassword" type="password" /></div>
            <button type="submit" disabled={isSubmitting}>Change</button>
            {status?.error && <div style={{ color: 'red' }}>{status.error}</div>}
            {status?.success && <div style={{ color: 'green' }}>{status.success}</div>}
          </Form>
        )}
      </Formik>
    </div>
  );
}